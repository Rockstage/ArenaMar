  <!-- Start Locations-Top -->
  <div class="locations-top">
    <div id="location-map"></div>
  </div>
  <!-- End Locations-Top -->

  <section class="about" style="padding: 50px 0; height: auto;">
    <div class="container">
      <div class="row">
        <div class="preamble stars col-md-12">
