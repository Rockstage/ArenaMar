                    <li>Phone 1: +359 52 000 000</li>
                    <li>Phone 2: +359 52 000 000</li>
                    <li>Fax 1: +359 52 000 000</li>
                  </ul>
                </div>
                <div class="col-lg-6 col-md-6">
                  
                </div>
                <div class="col-lg-6 col-md-6">
                  <ul class="location-details custom-list">
                    <li>Email: <a href="mailto:example@example.com">example@example.com</a></li>
                    <li>Website: <%= link_to "www.example.com", "www.example.com" %></li>
                  </ul>
                </div>
              </div>
            </div>
          </div>
        </div>
        <div class="col-md-6">
          <div class="location-thumbnail">
